package test;

class Foo is ConvertibleTo[Number] {
	var value Number;
	method toThing() Number {
		return this.value;
	}

	static make(value Number) Foo {
		return new(value = value);
	}
}

interface ConvertibleTo[#Thing] {
	method toThing() #Thing;
}

class Converter[#From, #To | #From is ConvertibleTo[#To]] {
	static convert(from #From) #To {
		return from.toThing();
	}
}

class Test {
	static main() Unit {
		var foo Foo = Foo.make(7);

		var x Number = Converter[Foo, Number].convert(foo);
	}
}
